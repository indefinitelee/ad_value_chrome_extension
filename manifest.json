{

// we start with version 2

  "manifest_version": 2,

  "name": "Ad Value",
  "description": "Try to calculate value of blocked ads on page",
  "version": "1.0",

  "background": {
    "persistent": false,
    "scripts": ["background.js"] // oh wait there is a background script?
    },

// only content scripts have access to DOM
  "content_scripts": [
    {
    "matches": ["http://*/*"],
    "js": ["content.js"] // DOM stuff happens here
    }
  ],

  //wat?
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "This Page Costs Mucho Dinero",
    "default_popup": "popup.html"
  },

  "permissions":
    [
    "pageCapture", // save MHTML version of page?
// https://developer.chrome.com/extensions/pageCapture#method-saveAsMHTML
    // "webRequest", can;t be used with event listener pages // view network requests but if blocker stops them, will they register?
    "activeTab",
    "<all_urls>"
    ]

}
